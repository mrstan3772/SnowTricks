{{ form_start(form, {method: 'POST', action: path('comment_new', {'trick_slug': trick.trickSlug})}) }}
    <fieldset>
        <legend>
            <i class="fa fa-comment" aria-hidden="true"></i> Ajouter un commentaire
        </legend>

        {# Render any global form error (e.g. when a constraint on a public getter method failed) #}
        {{ form_errors(form) }}

        <div class="form-group {% if not form.comment_content.vars.valid %}has-error{% endif %}">
            {{ form_label(form.comment_content, 'label.comment_content', {label_attr: {class: 'sr-only'}}) }}

            {# Render any errors for the "comment_content" field (e.g. when a class property constraint failed) #}
            {{ form_errors(form.comment_content) }}

            {{ form_widget(form.comment_content, {attr: {rows: 10}}) }}
            {{ form_help(form.comment_content) }}
        </div>

        <div class="form-group mt-5 d-flex justify-content-center">
            <button class="btn btn-primary pull-right" type="submit">
                <i class="fa fa-paper-plane" aria-hidden="true"></i> Publier le commentaire
            </button>
        </div>
    </fieldset>
{{ form_end(form) }}
