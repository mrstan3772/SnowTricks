{% extends 'admin/layout.html.twig' %}
{% import 'macros/alertes.html.twig' as utils %}

{% block title %}Liste des figures | {{ title_page }}{% endblock %}

{% block body_id 'trick_list' %}

{% block main %}
    <!-- ======= Trick List ======= -->
    <main id="main">
        {{ no_script|raw }}

        <h1 class="text-center">Liste des figures</h1>

        <section class="container">
            <table class="table table-striped table-middle-aligned text-center">
            <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i>  Publié le</th>
                    <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i>  Actions</th>
                </tr>
            </thead>
                <tbody>
                {% for trick in tricks %}
                    <tr>
                        <td>{{ trick.trickName }}</td>
                        <td>{{ trick.trickCreationDate|date('d/m/Y à H:h:i') }}</td>
                        <td class="text-right">
                            <div class="item-actions">
                                <a href="{{ path('admin_trick_show', {trick_slug: trick.trickSlug}) }}" class="btn btn-sm btn-default">
                                    <i class="fa fa-eye" aria-hidden="true"></i> Voir
                                </a>

                                <a href="{{ path('admin_trick_edit', {trick_slug: trick.trickSlug}) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-edit" aria-hidden="true"></i> Éditer
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" align="center">Aucune figure.</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </main>
{% endblock %}
