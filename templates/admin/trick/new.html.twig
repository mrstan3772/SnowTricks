{% extends 'admin/layout.html.twig' %}
{% import 'macros/alertes.html.twig' as utils %}

{% block title %}Ajouter une figure | {{ title_page }}{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
    <script src="/dist/js/trick_add_upload.js"></script>
{% endblock %}

{% block body_id 'trick_new' %}

{% block hero %}
    {{ include('_hero_section.html.twig', { show: true, title: 'Création de Figure' }) }}
{% endblock %}

{% block main %}
    <!-- ======= Trick Add Form ======= -->
    <main id="main" class="mt-3">
        {{ no_script|raw }}
        
        <div class="container">
            <div class="row d-flex justify-content-center">
                <h3 class="text-center">Contenu principal</h3>
                <div class="bg-light mt-4 mb-4 p-4 d-flex justify-content-center">
                    <div class="well text-center">

                        <div class="alert alert-danger d-none errors-container" role="alert">
                            <ul class="errors-trick-form"></ul>
                        </div>
                        <div class="alert alert-success d-none success-container" role="alert"></div>

                        {{ form_start(form, {'attr': {'action': path('admin_trick_new'), 'enctype': 'multipart/form-data', 'id': 'trickForm', 'class': 'dropzone' }} ) }}
                            {{ form_row(form.trick_name) }}
                            {{ form_row(form.trick_description) }}
                            {{ form_row(form.trick_group_id) }}
                            {{ form_row(form.trick_creation_date) }}
                            
                            <!-- <label class="text-center">Ajouter du contenu annexe</label>

                            <div id="dropzone-previews"></div> -->
                             <div class="mb-5">      
                                <button id="publish-btn" type="submit" class="btn btn-primary">
                                    <i class="fa fa-save" aria-hidden="true"></i> Enregistrer
                                </button>
                            
                                <a href="{{ path('admin_trick_index') }}" class="btn btn-link">
                                    <i class="fa fa-list-alt" aria-hidden="true"></i>  Retour à la liste des figures
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                
            </div>
        </div>
    </main>
{% endblock %}