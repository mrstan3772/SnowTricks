{% extends 'base.html.twig' %}
{% import 'macros/alertes.html.twig' as utils %}

{% block title %}Mot de passe oublié Étape 1{% endblock %}

{% block body %}
    <main class="container mt-3">

        <h1 class="text-center">Mot de passe oublié - Étape 1</h1>

        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12 bg-light mt-4 p-4 d-flex justify-content-center">
                    {{ form_row(forgotPasswordFormStep1.username.username) }}
                
                    {{ form_row(forgotPasswordFormStep1.username.confirm) }}


                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto" title="Saissiez deux fois le nom d'utilisateur pour recevoir le lien de réinitialisation du mot de passe.">
                            Envoyez-moi un lien de réinitialisation
                        </button>
                    </div>
                </div>
        </div>
    </div>

        {{ form_end(forgotPasswordFormStep1) }}

    </main>
{% endblock %}